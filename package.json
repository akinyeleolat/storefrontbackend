    "start": "cross-env NODE_ENV=prod node dist/server.js",
    "watch": "cross-env NODE_ENV=dev concurrently \"tsc --watch\" \"nodemon",
    "dev": "nodemon",
    "build": "yarn clean && tsc",
    "pretest": "yarn setup:test:db && yarn build",
    "test": "cross-env NODE_ENV=test ts-node ./node_modules/jasmine/bin/jasmine",
    "clean": "rm -rf dist",
    "migrate:up": "npx db-migrate up",
    "migrate:down": "npx db-migrate down",
    "migrate:reset": "npx db-migrate reset",
    "setup:test:db": "npx db-migrate reset -e test && npx db-migrate up -e test",
    "tsc": "tsc",
    "lint": "npx eslint . --ext .ts"
  },
